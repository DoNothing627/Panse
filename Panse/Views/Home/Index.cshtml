<div class="card-columns">
    @foreach (var product in Model)
    {
        <div class="card" style="width: 22rem; height: 35rem">
            <img class="card-img-top" src="@product.Img" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@product.Cost - @product.Sale</h5>
                <h6>ID: @product.Id</h6>
                @if (product.Amount == 0)
                {
                    <p style="color: red;">Tạm hết hàng</p>
                }
                @if (product.Amount != 0)
                {
                    <p style="color: green;">Còn hàng</p>
                }
                @* <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> *@
                <a href="@product.Img" target="_blank" class="btn btn btn-primary">Detail</a>
            </div>
        </div>
    }
</div>


