<a asp-action="Index" asp-route-Id="0" class="btn btn-primary" style="margin-right: 15px; margin-bottom: 30px">Ring</a>
<a asp-action="Index" asp-route-Id="1" class="btn btn-primary" style="margin-right: 15px; margin-bottom: 30px">Necklace</a>
