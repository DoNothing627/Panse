@model Panse.Models.Necklace

<form method="post" asp-action="UpdateNecklace">
    <input asp-for="Id" hidden />
    <div class="border p-4">
        <div class="form-group row">
            <h2 class="text-black-50 pl-4">Update Necklaces</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Img"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Cost"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Sale"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Img" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Cost" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Sale" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Amount" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="update" />
                        </div>
                        <div class="col">
                            <a asp-action="Necklace" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

