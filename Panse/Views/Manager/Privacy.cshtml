@model Panse.Models.RePassword

<form method="post" asp-action="CheckPass">
    <div id="content" class="flex">
        <div class="">
            <div class="page-content page-container" id="page-content">
                <div class="padding">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header"><strong>Login to your account</strong></div>
                                <div class="card-body">
                                        <div class="form-group">
                                            <label class="text-muted" for="exampleInputPassword1" asp-for="pass">Password</label>
                                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="pass">
                                            <small id="passwordHelp" class="form-text text-muted">your password is saved in encrypted form</small>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-check"><input type="checkbox" class="form-check-input"><label class="form-check-label">Check me out</label></div>
                                        </div> <input type="submit" class="btn btn-info w-75" value="Login" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>