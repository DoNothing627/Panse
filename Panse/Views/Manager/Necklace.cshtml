@model IEnumerable<Panse.Models.Necklace>

<a asp-action="Ring" class="btn btn-primary">Ring</a>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Necklaces List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CreateNecklace" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>
                        Sale
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%">@item.Id</td>
                        <td width="20%">@item.Cost</td>
                        <td width="20%">@item.Sale</td>
                        <td width="20%">@item.Amount</td>
                        <td width="20%">
                            <a asp-action="UpdateNecklace" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-action="DeleteNecklace" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

